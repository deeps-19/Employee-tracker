{
  "info": {
    "name": "Employee Task Tracker API",
    "_postman_id": "task-tracker-api-collection",
    "description": "API collection for Employee Task Tracker (Mini Jira)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "User Signup",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Admin User\",\n  \"email\": \"admin@example.com\",\n  \"password\": \"123456\",\n  \"role\": \"admin\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/signup",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "signup"]
        }
      }
    },
    {
      "name": "User Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Create Login Page\",\n  \"description\": \"Frontend login UI\",\n  \"priority\": \"High\",\n  \"dueDate\": \"2025-12-10\",\n  \"assigneeId\": \"{{userId}}\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/tasks",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "tasks"]
        }
      }
    },
    {
      "name": "Assign Task (Admin Only)",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"assigneeId\": \"{{userId}}\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/tasks/assign/{{taskId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "tasks", "assign", "{{taskId}}"]
        }
      }
    },
    {
      "name": "Update Task Status",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"In-Progress\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/tasks/status/{{taskId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "tasks", "status", "{{taskId}}"]
        }
      }
    },
    {
      "name": "My Tasks (User)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/tasks/my",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "tasks", "my"]
        }
      }
    },
    {
      "name": "Get All Tasks (Admin Only)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/tasks/all",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "tasks", "all"]
        }
      }
    }
  ],
  "variable": [
    { "key": "token", "value": "" },
    { "key": "userId", "value": "" },
    { "key": "taskId", "value": "" }
  ]
}
